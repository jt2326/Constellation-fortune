<image src="{{imagepath}}" style='height:{{wH}}'>
</image>
<view class="section">
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{constellation_list}}">
    <view class="picker">
      {{constellation_list[index]}}
    </view>
  </picker>
  <view class='info'>
      <view class='item'>
        <text class='key'>日期：</text>
        <text class='value'>{{constellation_info.datetime}}</text>
      </view>
      <view class='item'>
        <text class='key'>综合指数：</text>
        <text class='value'>{{constellation_info.all}}</text>
      </view>
      <view class='item'>
        <text class='key'>健康指数：</text>
        <text class='value'>{{constellation_info.health}}</text>
      </view>
      <view class='item'>
        <text class='key'>爱情指数：</text>
        <text class='value'>{{constellation_info.love}}</text>
      </view>
      <view class='item'>
        <text class='key'>工作指数：</text>
        <text class='value'>{{constellation_info.work}}</text>
      </view>
      <view class='item'>
        <text class='key'>财运指数：</text>
        <text class='value'>{{constellation_info.money}}</text>
      </view>
      <view class='item'>
        <text class='key'>幸运数字：</text>
        <text class='value'>{{constellation_info.number}}</text>
      </view>
      <view class='item'>
        <text class='key'>幸运色：</text>
        <text class='value'>{{constellation_info.color}}</text>
      </view>
      <view class='item'>
        <text class='key'>速配星座：</text>
        <text class='value'>{{constellation_info.QFriend}}</text>
      </view>
      <view class='item'>
        <text class='general'>今日概述</text>
        <text class='des'>{{constellation_info.summary}}</text>
      </view>
    </view>
</view>
